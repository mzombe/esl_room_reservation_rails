<div class="modal fade" id="edit-reservation-modal-<%= reservation.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Reservation Not Avaliable</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with(model: @reservation, method: :patch, local: true) do %> 
            <p>Booking time: <%= "#{reservation.hour}" %>:00 </p>
            <p>Booking date: <%= "#{reservation.day}" "#{Date.today.month}/#{Date.today.year}" %> </p>
            <div class="form-group">
              <%= hidden_field_tag "reservation[day]", @reservation.day, id: "date-input"%>
              <%= hidden_field_tag "reservation[hour]", @reservation.hour ,id: "time-input"%>
              <%= label_tag "reservation[description]", "Reservation Description: ", class: "col-form-label" %>
              <%= text_area_tag "reservation[description]", @reservation.description, class: "form-control" %>
            </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= submit_tag "Refresh", class: "btn btn-primary" %>
      </div>
          <% end %>
    </div>
  </div>
</div>
